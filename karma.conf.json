{
  "frameworks": [
    "jasmine",
    "browserify"
  ],
  "basePath": "",
  "files": [
    "src/**/*.spec.ts"
  ],
  "preprocessors": {
    "src/**/*.spec.ts": "browserify"
  },
  "browserify": {
    "debug": true,
    "plugin": [
      "tsify"
    ]
  },
  "autoWatch": true,
  "reporters": [
    "progress"
  ],
  "browsers": [
    "Chrome"
  ],
  "junitReporter": {
    "outputFile": "test_out/unit.xml",
    "suite": "unit"
  },
  "notifyReporter": {
    "reportSuccess": false
  },
  "browserNoActivityTimeout": 3000000
}