{
  "frameworks": [
    "browserify",
    "jasmine"
  ],
  "basePath": "",
  "files": [
    "src/**/*.spec.js",
    "src/**/*.spec.ts"
  ],
  "browserify": {
    "debug": true,
    "plugin": [
      "tsify", {
        "target": "ES5"
      }
    ]
  },
  "preprocessors": {
    "src/**/*.spec.js": "browserify",
    "src/**/*.spec.ts": "browserify"
  },
  "autoWatch": true,
  "reporters": [
    "progress"
  ],
  "browsers": [
    "PhantomJS"
  ],
  "junitReporter": {
    "outputFile": "test_out/unit.xml",
    "suite": "unit"
  },
  "notifyReporter": {
    "reportSuccess": false
  },
  "browserNoActivityTimeout": 3000000
}
